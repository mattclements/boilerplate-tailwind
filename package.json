{
    "name": "NaturesFinestPetSupplies",
    "version": "1.0.0",
    "description": "Amasci Boilerplate using Tailwind",
    "main": "gulpfile.js",
    "author": "Terry Upton, Amasci Creative Limited",
    "contact": "<terry@amasci.co.uk> <www.amasci.co.uk> <01908 668665>",
    "copyright": "Amasci Creative Limited",
    "license": "UNLICENSED",
    "private": true,
    "paths": {
        "src": {
            "base": "src/",
            "js": "src/js/",
            "sass": "src/sass/",
            "img": "src/img/",
            "svg": "src/svg/"
        },
        "dist": {
            "base": "assets/",
            "css": "assets/css/",
            "js": "assets/js/",
            "img": "assets/img/",
            "svg": "assets/svg/"
        },
        "tailwind": {
            "config": "tailwind.js"
        },
        "templates": {
            "base": "craft/templates/",
            "svg": "craft/templates/_includes/svg/"
        }
    },
    "urls": {
        "local": "http://naturesfinestpetsupplies.loc",
        "live": "https://www.domain.ext",
        "critical": "https://www.domain.ext"
    },
    "vendors": {
        "js": [
            "./node_modules/lazysizes/lazysizes.js",
            "./node_modules/picturefill/dist/picturefill.js",
            "./node_modules/jquery/dist/jquery.js"
        ],
        "sass": [
            {
                "package": "./node_modules/hamburgers/_sass/hamburgers/**/*",
                "name": "hamburgers"
            },
            {
                "package": "./node_modules/hover.css/scss/**/*",
                "name": "hover"
            }
        ]
    },
    "autoprefixer": {
        "browsers": [
            "last 2 versions",
            "IE 10"
        ]
    },
    "purgecss": [
        "craft/templates/**/*.{html,twig}"
    ],
    "dependencies": {
        "hamburgers": "^0.9.1",
        "hover.css": "^2.2.1",
        "jquery": "^3.2.1",
        "lazysizes": "^2.0.6",
        "picturefill": "^3.0.2"
    },
    "devDependencies": {
        "autoprefixer": "^7.2.3",
        "beeper": "^1.1.1",
        "browser-sync": "^2.18.5",
        "chalk": "^2.4.0",
        "cssnano": "^3.10.0",
        "fancy-log": "^1.3.2",
        "gulp": "^3.9.1",
        "gulp-changed": "^3.1.1",
        "gulp-header": "^1.8.9",
        "gulp-include": "^2.3.1",
        "gulp-load-plugins": "^1.5.0",
        "gulp-notify": "^3.0.0",
        "gulp-plumber": "^1.1.0",
        "gulp-postcss": "^7.0.0",
        "gulp-purgecss": "^0.21.0",
        "gulp-rename": "^1.2.2",
        "gulp-sass": "^4.0.0",
        "gulp-size": "^3.0.0",
        "gulp-svgmin": "^1.2.3",
        "gulp-todo": "^5.2.0",
        "gulp-uglify": "^3.0.0",
        "moment": "^2.20.0",
        "postcss-color-function": "^4.0.1",
        "postcss-sorting": "^3.1.0",
        "stylelint": "^8.4.0",
        "stylelint-config-standard": "^18.0.0",
        "stylelint-scss": "^2.2.0",
        "tailwindcss": "^0.5.0"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    }
}
